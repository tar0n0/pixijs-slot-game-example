{
  "name": "@pixi/lights",
  "version": "4.0.0",
  "description": "A plugin that adds deferred lighting to PixiJS v6",
  "author": "Ivan Popelyshev",
  "contributors": [
    "Ivan Popelyshev <ivan.popelyshev@gmail.com>",
    "Matt Karl <matt@mattkarl.com>"
  ],
